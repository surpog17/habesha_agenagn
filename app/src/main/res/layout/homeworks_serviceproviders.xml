<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lll_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:layout_marginTop="10dp"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4da6ff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/descriptionhome"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-32dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:background="#b3d9ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/company" />

        <TextView
            android:id="@+id/service_type"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:background="#b3d9ff"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_location_on"/>
        <TextView
            android:id="@+id/elati"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:text="N/A"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/addphone_home"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginTop="1005dp"
            android:layout_marginLeft="0dp"
            android:text="N/A"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/phonehome"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-90dp"
            android:layout_marginTop="1009dp"
            android:text="N/A"
            android:textColor="#000"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="n/a"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/elong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:text="n/a"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/home_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="00dp"
            android:text="n/a"
            android:textColor="#000"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/emailhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="450dp"
            android:text="n/a"
            android:textColor="#000"
            android:textSize="15dp" />

    </LinearLayout>




</LinearLayout>

